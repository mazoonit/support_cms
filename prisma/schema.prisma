// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id Int @id @default(autoincrement())
  title String @unique
  subtitle String
  description String
  body String
  speakers String
  date DateTime
  type String
  image_path String?
  content_path String?
}

model User {
  id Int @id @default(autoincrement())
  user_name String @unique
  password String
  role String
}
