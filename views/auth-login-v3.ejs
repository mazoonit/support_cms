    <script>

        function login(event){
            event.preventDefault()
    
    
                // You can access form data using FormData object if needed
                const formData = new FormData(document.getElementById('--js-login-form'));
    
                const reqBody = Object.fromEntries(formData.entries())
                console.log('Form Data:', reqBody);
    

                // let reqBody = {user_name: user_name, password: password}
            var myHeaders = new Headers();
            myHeaders.append('Content-Type', 'application/json');
            fetch('/api/auth/login',{
                method: "POST",
                mode: "cors",
                cache: "no-cache",
                credentials: "same-origin",
                headers: myHeaders,
                redirect: "follow",
                referrerPolicy: "no-referrer",
                body: JSON.stringify(reqBody),
            })
            .then(response =>{
                if(response.status != 200){
                    throw new Error("noPermissions");
                }
                return response.json()
            })
            .then(data => {
                    localStorage.setItem('token', data.token);
                    window.location.href = '/events';
                    alert("Login successfully!");
            })
            .catch(error => {
                if(error.message == 'noPermissions'){
                    alert("You are not permitted!");
                }
                else{
                    alert("Network Errors!");
                }
            });
            return false;
            
        }
    </script>
